<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="800.0" spacing="30.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.HomeController">
   <children>
      <!-- First ButtonBar -->
      <HBox alignment="CENTER" spacing="20.0">
         <Button mnemonicParsing="false" onAction="#searchplayeraction" text="Search Player">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
         <Button mnemonicParsing="false" onAction="#searchclubaction" text="Search Club">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
         <Button mnemonicParsing="false" onAction="#addplayeraction" text="Add Player">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
      </HBox>

      <!-- Second ButtonBar -->
      <HBox alignment="CENTER" spacing="20.0">
         <Button mnemonicParsing="false" onAction="#sellplayeraction" text="Sell Player">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
         <Button mnemonicParsing="false" onAction="#buyplayeraction" text="Buy Player">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
      </HBox>

      <!-- Logout Button -->
      <Button mnemonicParsing="false" onAction="#logoutAction" text="Logout">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</VBox>
